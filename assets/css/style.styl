@import 'methods'

html, body
  margin 0
  padding 0

body
  -webkit-font-smoothing antialiased

#expand
  padding-top 15px
  display none
  overflow hidden
  vendor('transition', all 0.5s)

#app
  width 520px
  padding 20px
  background-color #DADFE1

  h1
    font-weight bold
    text-align center

  footer
    display none
    margin 0 -20px -20px -20px
    overflow hidden
    background-color #5bb75b
    padding 0 20px
    line-height 37px

#main
  display none

#assignment-list
  margin 0
  padding 0
  list-style none
  border-top 1px solid #95a5a6

  li
    padding 10px 20px 10px 0
    position relative
    border-bottom 1px solid #95a5a6

  li label
    font-size 24px

  li:last-child
    border-bottom none

  li.done .view label
    color #777777
    text-decoration line-through

  .destroy
    position absolute
    right 5px
    top 20px
    display none
    cursor pointer
    width 20px
    height 20px
    background url(/img/destroy.png) no-repeat

  li:hover .destroy
    display block

  .destroy:hover
    background-position 0 -20px

  .details, .edit-text
    font-size 12px

  .priority0
    priority(0)

  .priority1
    priority(1)

  .priority2
    priority(2)

  .priority3
    priority(3)

  .priority4
    priority(4)

  .priority5
    priority(5)

  .priority6
    priority(6)

  .priority7
    priority(7)

  .priority8
    priority(8)

  .priority9
    priority(9)

  .priority
    position absolute
    right 30px
    top 20px
    cursor pointer
    width 20px
    height 20px
    border-radius 50%

  li .view label
    word-break break-word

  li .edit
    display none

#clear-completed
  float right
  line-height 20px
  text-decoration none
  background rgba(0, 0, 0, 0.1)
  color #555555
  font-size 11px
  margin-top 8px
  margin-bottom 8px
  padding 0 10px 1px
  cursor pointer
  vendor('border-radius', 12px)
  vendor('box-shadow', rgba(0, 0, 0, 0.2) 0 -1px 0 0)

#clear-completed:hover
  background rgba(0, 0, 0, 0.15)
  vendor('box-shadow', rgba(0, 0, 0, 0.3) 0 -1px 0 0)

#clear-completed:active
  position relative
  top 1px

#todo-count span
  font-weight bold

#footer
  margin 10px auto
  color #95a5a6
  text-align center

  a 
    color #bdc3c7
