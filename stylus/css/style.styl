vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

html, body
  margin 0
  padding 0

body
  font: 14px "Helvetica Neue", Helvetica, Arial, sans-serif
  line-height: 1.4em
  background: #eeeeee
  color: #333333
  width: 520px
  margin: 0 auto
  -webkit-font-smoothing: antialiased

#app
  background: #fff
  padding: 20px
  margin-bottom: 40px
  vendor('border-radius', 0 0 5px 5px)
  vendor('box-shadow', rgba(0, 0, 0, 0.2) 0 2px 6px 0)

  h1
    font-size 36px
    font-weight bold
    text-align center
    padding 0 0 10px 0

  input[type="text"]
    width 466px
    font-size 24px
    font-family inherit
    line-height 1.4em
    border 0
    outline none
    padding 6px
    border 1px solid #999999
    vendor('box-shadow', rgba(0, 0, 0, 0.2) 0 1px 2px 0 inset)

  input::-webkit-input-placeholder
    font-style italic

  footer
    display none
    margin 0 -20px -20px -20px
    overflow hidden
    color #555555
    background #f4fce8
    border-top 1px solid #ededed
    padding 0 20px
    line-height 37px
    vendor('border-radius', 0 0 5px 5px)

  .success, .warning, .error
    border: 1px solid
    margin: 0 0 0 0
    padding: 15px 10px 15px 50px
    background-repeat: no-repeat
    background-position: 10px center

  .error
    color: #D8000C
    background-color: #FFBABA
    background-image: url('/img/error.png')

#main
  display none

#assignment-list
  margin 10px 0
  padding 0
  list-style none

  li
    padding 18px 20px 18px 0
    position relative
    font-size 24px
    border-bottom 1px solid #cccccc

  li:last-child
    border-bottom none

  li.done label
    color #777777
    text-decoration line-through

  li:hover .destroy
    display block

  .destroy:hover
    background-position 0 -20px

  li.editing
    border-bottom none
    margin-top -1px
    padding 0

  li.editing:last-child
    margin-bottom -1px

  li.editing .edit
    display block
    width 444px
    padding 13px 15px 14px 20px

  li.editing .view
    display none

  li .view label
    word-break break-word

  li .edit
    display none

#clear-completed
  float right
  line-height 20px
  text-decoration none
  background rgba(0, 0, 0, 0.1)
  color #555555
  font-size 11px
  margin-top 8px
  margin-bottom 8px
  padding 0 10px 1px
  cursor pointer
  vendor('border-radius', 12px)
  vendor('box-shadow', rgba(0, 0, 0, 0.2) 0 -1px 0 0)

#clear-completed:hover
  background rgba(0, 0, 0, 0.15)
  vendor('box-shadow', rgba(0, 0, 0, 0.3) 0 -1px 0 0)

#clear-completed:active
  position relative
  top 1px

#todo-count span
  font-weight bold

#instructions
  margin 10px auto
  color #777777
  text-shadow rgba(255, 255, 255, 0.8) 0 1px 0
  text-align center

  a 
    color #336699

#credits
  margin 30px auto
  color #999
  text-shadow rgba(255, 255, 255, 0.8) 0 1px 0
  text-align center

  a
    color: #888
