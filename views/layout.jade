!!!
html
  head
    title= 'Agenda Book'
    link(rel='stylesheet', href='/css/style.css')
    script(type='text/javascript', src='/components/jquery/jquery.js')
    script(type='text/javascript', src='/components/lodash/lodash.js')
    script(type='text/javascript', src='/components/backbone/backbone.js')
    script(type='text/javascript', src='/js/client.js')
  body
    .app
      #header
        h1
          a(href='/') Agenda Book v0.0.1
        - if (info != undefined && info.length != 0)
          each message in info
            div.success
              p= message
        - if (error != undefined && error.length != 0)
          each message in error
            div.error
              p #{message}
        - if (typeof currentUser !== 'undefined')
          a#logout(href='/sessions') Log Out
      block content
