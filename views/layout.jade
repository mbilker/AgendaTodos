!!!
html
  head
    title= 'Agenda Book'
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/css/style.css')
    script(type='text/javascript', src='/js/jquery.js')
    script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
    script(type='text/javascript', src='/js/lodash.js')
    script(type='text/javascript', src='/js/backbone.js')
    script(type='text/javascript', src='/js/logout.js')
  body
    #app
      div#header
        h1 Agenda Book
        - if (info != undefined && info.length != 0)
          each message in info
            div.success
              p= message
        - if (error != undefined && error.length != 0)
          each message in error
            div.error
              p #{message}
        - if (typeof currentUser !== 'undefined')
          a#logout(href='/sessions') Log Out
      block content
    block footer
