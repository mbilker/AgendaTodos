!!!
html
  head
    block head
      title= 'Agenda Book'
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato', type='text/css')
      link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css', type='text/css')
      link(rel='stylesheet', href='/css/style.css', type='text/css')
      script(type='text/javascript', data-main='/js/require-config', src='/js/require.js')
  body
    #app.container
      div#header
        h1 Agenda Book
        - if (info != undefined && info.length != 0)
          each message in info
            span.label.label-info= message
        - if (error != undefined && error.length != 0)
          each message in error
            span.label.label-important= message
        - if (typeof currentUser !== 'undefined')
          a#logout(href='/sessions') Log Out
      block content
    block footer
