!!!
html
  head
    block head
      title= 'Agenda Book'
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato', type='text/css')
      link(rel='stylesheet', href=settings.cssmain, type='text/css')
      script(type='text/javascript', src=settings.jsmain)
      script(type='text/javascript').
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-41411244-1', 'mbilker.us');
        ga('send', 'pageview');
  body
    #app.container
      div#header
        h1 Agenda Book
        - if (settings.info && settings.info.length != 0)
          div
            each message in settings.info
              span.label.label-info= message
        - if (settings.error && settings.error.length != 0)
          div
            each message in settings.error
              span.label.label-important= message
        - if (typeof currentUser !== 'undefined')
          a#logout(href='/sessions') Log Out
      block content
    block footer
