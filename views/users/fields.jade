.control-group
  label.control-label(for='username') Username
  .controls
    input#username(name='user[name]', type='text', value=user.name || '')

- if (typeof register !== 'undefined')
  .control-group
    label.control-label(for='email') Email
    .controls
      input#email(name='user[email]', type='text', value=user.email || '')

.control-group
  label.control-label(for='password') Password
  .controls
    input#password(name='user[password]', type='password', value=user.password || '')