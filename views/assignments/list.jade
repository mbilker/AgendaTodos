extends ../layout

block content
  - //script(type='text/javascript', src='/templates/templates.js')
  script(type='text/javascript', src='/js/client.js')
  div#list
    header
      input(id='new-assignment', type='text', placeholder='What needs to be done?')
      | Priority:
      input(id='priority', type='number', min='0', max='9')
      |  Due Date:
      input(id='dueDate', type='date')
    section#main
      input(id='toggle-all', type='checkbox')
      label(for='toggle-all') Mark all as complete
      ul#assignment-list
    footer
      a#clear-completed Clear Completed
      div#assignment-count

block footer
  div#instructions
    | Double-click to edit an assignment.
  div#credits
    | Modified by
    br
    a(href='http://mbilker.us/') mbilker
    br
    | Created originally by
    br
    a(href='http://jgn.me/') J&eacute;r&ocirc;me Gravel-Niquet
  script(type='text/template', id='item-template').
    <div class="view">
      <input class="toggle" type="checkbox" <%= completed ? 'checked="checked"' : '' %> />
      <label><%- title %></label>
      <em class="details">Due: <%= new Date(dueDate).toDateString() %> - Priority: <%- priority %></em>
      <a class="destroy"></a>
    </div>
    <input class="edit" type="text" value="<%- title %>" />
  script(type='text/template', id='stats-template').
    <% if (done) { %>
      <a id="clear-completed">Clear <%= done %> completed <%= done == 1 ? 'item' : 'items' %></a>
    <% } %>
    <div class="todo-count"><b><%= remaining %></b> <%= remaining == 1 ? 'item' : 'items' %> left</div>
