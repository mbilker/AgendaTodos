extends layout

block content
  div#list
    header
      input.form-control(id='new-assignment', type='text', placeholder='What needs to be done?')
      #expand
        .form-horizontal
          .form-group
            label.col-sm-3.control-label(for='priority') Priority
            .col-sm-5
              input.form-control(id='priority', type='number', min='0', max='9', placeholder='0')
          .form-group
            label.col-sm-3.control-label(for='dueDate') Due Date
            .col-sm-5
              input.form-control(id='dueDate', type='date')
          .form-group
            .col-sm-offset-3.col-sm-3
              input.btn.btn-success(id='submit', type='button', value='Submit')
    section#main
      label.checkbox(for='toggle-all')
        input(id='toggle-all', type='checkbox')
        |  Mark all as complete
      ul#assignment-list
    footer
      a#clear-completed Clear Completed
      div#assignment-count

block footer
